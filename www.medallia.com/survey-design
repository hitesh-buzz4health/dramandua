<script>
  jQuery(function() {
      var $ = jQuery.noConflict();

      var addMyClass = function(){
          $('#fancybox-content').addClass('letsTalkModal');
      };

      var initModal = function(){
          addMyClass();
      };

      $('#menu-item-24794 a').fancybox({
            'onStart': initModal,
            'transitionIn': 'fade',
            'width': 700,
            'height': 600,
            'fitToView': false,
            'onComplete': function() {
              $('.letsTalkModal').prepend('<strong>Contact Us</strong>');
              $('.letsTalkModal').append('<div class="modal-footer"><a href="/privacy" class="modal-footer-link">Privacy Policy</a></div>');
            }
      });


      /**
       *  Navigation
       */
       $('#mobile-menu-trigger').click(function(e) {
          e.stopPropagation();
          var $mobileMenu = $('#mobile-menu');

          $(this).toggleClass('active');
          $mobileMenu.toggleClass('active');
       });

      $('.menu-item-has-children','#mobile-menu-nav').click(function() {
          var $this = $(this);

          $this.toggleClass('active');
          setTimeout(function() {
            adjustMenuHeight($('#mobile-menu-nav'));
          }, 300);
      });

      $('#mobile-menu-nav').click(function(e) {
        e.stopPropagation();
      });

      /**
       *  Click outside of menu to close it
       */
        $(document).click(function() {
          $('#mobile-menu-trigger, #mobile-menu').removeClass('active');
        });

      /*********************************************************
        Menu height adjustment based on height status of viewport
      	**********************************************************/

      	function adjustMenuHeight($selector) {
      		if(($(window).height() - 81) < $selector.height()) {
      			$selector.css({
      				'height'    : ($(window).height() - 81),
      				'overflow-y': 'scroll',
      				'width'		: $('#mobile-menu').width()
      			});
      		} else {

      				$selector.css({
                'overflow-y': 'auto',
                'height'    : (($(window).height() - 81))
              });
      		}
      	}

      	// Cache selectors
      	var $body = $('body');

      	/**
         *	Adjust menu height for mobile people
         */
         setTimeout(function() {
           adjustMenuHeight($('#mobile-menu-nav'));
         }, 300);

        $(window).resize(function() {
            setTimeout(function() {
              adjustMenuHeight($('#mobile-menu-nav'));
            }, 300);
        }).resize();

  });
</script>

